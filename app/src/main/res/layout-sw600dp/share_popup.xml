<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/mTrans1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m5dp"
            android:orientation="horizontal">

            <com.ftl.tourisma.custom_views.NormalTextView
                android:id="@+id/tv_main_invite1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/m15dp"
                android:textColor="@color/mBlack"
                android:text="@string/share_friend"
                android:textSize="@dimen/TEXT_NORMAL" />

            <com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                ripple:rv_type="rectangle">

                <ImageView
                    android:id="@+id/iv_menu_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:padding="@dimen/m10dp"
                    android:src="@drawable/close_icon" />
            </com.andexert.library.RippleView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m1dp"
            android:layout_marginTop="@dimen/m5dp"
            android:background="@color/mBlue">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/m0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/m15dp">

                <ImageView
                    android:id="@+id/facebook_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/fb_icon_popup" />

                <com.ftl.tourisma.custom_views.NormalTextView
                    android:id="@+id/tv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m15dp"
                    android:layout_marginTop="@dimen/m10dp"
                    android:text="@string/facebook"
                    android:textColor="@color/mBlack"
                    android:textSize="@dimen/m15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/m0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/m15dp">

                <ImageView
                    android:id="@+id/twitter_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twitter_icon_popup" />

                <com.ftl.tourisma.custom_views.NormalTextView
                    android:id="@+id/tv_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m15dp"
                    android:layout_marginTop="@dimen/m10dp"
                    android:text="@string/twitter"
                    android:textColor="@color/mBlack"
                    android:textSize="@dimen/m15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="@dimen/m0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/google_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/googel_icon_popup" />

                <com.ftl.tourisma.custom_views.NormalTextView
                    android:id="@+id/tv_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m15dp"
                    android:layout_marginTop="@dimen/m10dp"
                    android:text="@string/google"
                    android:textColor="@color/mBlack"
                    android:textSize="@dimen/m15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/m0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sms_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sms_icon_popup" />

                <com.ftl.tourisma.custom_views.NormalTextView
                    android:id="@+id/tv_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m15dp"
                    android:layout_marginTop="@dimen/m10dp"
                    android:text="@string/sms"
                    android:textColor="@color/mBlack"
                    android:textSize="@dimen/m15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>