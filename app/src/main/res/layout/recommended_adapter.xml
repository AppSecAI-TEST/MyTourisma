<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_recommended"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <com.ftl.tourisma.custom_views.NormalTextView
            android:id="@+id/tv_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/recommended_btn"
            android:gravity="center"
            android:text="RECOMMENDED"
            android:textColor="#000000"
            android:textSize="9dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/m20dp"
            android:layout_marginRight="@dimen/m10dp"
            android:orientation="vertical">

            <com.ftl.tourisma.custom_views.NormalTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Sultana Beach - Goa, India"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/m15dp" />

            <com.ftl.tourisma.custom_views.NormalTextView
                android:id="@+id/description1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Tending this week"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/m12dp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>