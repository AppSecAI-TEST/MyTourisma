<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mWhite"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlNearBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_nearby_explorer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <!-- <ProgressBar
             android:id="@+id/progressBar"
             style="?android:attr/progressBarStyleLarge"
             android:layout_width="@dimen/m20dp"
             android:layout_height="@dimen/m20dp"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:layout_gravity="center"
             android:indeterminateDrawable="@drawable/progress_background"
             android:visibility="gone"></ProgressBar>
 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m110dp"
                android:background="#99000000"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="@dimen/m0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/m10dp"
                    android:paddingRight="@dimen/m10dp">

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_near"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:freezesText="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Hello"
                        android:textColor="@color/mWhite"
                        android:textSize="@dimen/TEXT_SMALL" />

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/txtCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m5dp"
                        android:ellipsize="marquee"
                        android:freezesText="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Hello"
                        android:textColor="@color/mGray"
                        android:textSize="@dimen/TEXT_SMALL_SKIP" />


                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_timing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:freezesText="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Hello"
                        android:textColor="@color/mGray"
                        android:textSize="@dimen/TEXT_SMALL_SKIP" />

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:freezesText="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Hello"
                        android:textColor="@color/mGray"
                        android:textSize="@dimen/TEXT_SMALL_SKIP" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/m0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rl_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/m1dp"
                        android:layout_weight="13"
                        android:background="@color/mBlue"
                        android:weightSum="3"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:src="@drawable/ic_share_" />
                        <com.ftl.tourisma.custom_views.NormalTextView
                            android:id="@+id/txtShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/m5dp"
                            android:layout_marginRight="@dimen/m5dp"
                            android:text="Share"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/mWhite"
                            android:textSize="@dimen/TEXT_SMALL_SKIP" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rl_fav"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/m1dp"
                        android:layout_weight="14"
                        android:layout_gravity="center"
                        android:background="@color/mBlue"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgFav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:src="@drawable/selector_favourite_new" />

                        <com.ftl.tourisma.custom_views.NormalTextView
                            android:id="@+id/txtFav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/m2dp"
                            android:layout_marginRight="@dimen/m2dp"
                            android:text="Favourite"
                            android:textColor="@color/mWhite"
                            android:textSize="@dimen/TEXT_SMALL_SKIP" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rl_navigator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="13"
                        android:background="@color/mBlue"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:src="@drawable/ic_navigator" />

                        <com.ftl.tourisma.custom_views.NormalTextView
                            android:id="@+id/txtDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/m5dp"
                            android:layout_marginRight="@dimen/m5dp"
                            android:gravity="center"
                            android:text="2.5kmvttt"
                            android:textColor="@color/mWhite"
                            android:textSize="@dimen/TEXT_SMALL_SKIP" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/m0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llView"
                        android:layout_width="@dimen/m30dp"
                        android:layout_height="@dimen/m30dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/m5dp"
                        android:background="@drawable/bg_white_arrow"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_right_white_arrow" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
