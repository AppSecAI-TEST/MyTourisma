<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/no_internet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/internet_fail_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/network_err" />

    <Button
        android:id="@+id/try_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Try Again"
        android:textColor="#ffffff"
        android:visibility="visible" />

    <com.ftl.tourisma.custom_views.NormalTextView
        android:id="@+id/internet_fail_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center_horizontal"
        android:text="Whoops!!"
        android:textColor="#ababab"
        android:textSize="22sp" />

    <com.ftl.tourisma.custom_views.NormalTextView
        android:id="@+id/net_fail_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/internet_fail_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/network_error"
        android:textColor="#ababab"
        android:textSize="15sp" />

</RelativeLayout>