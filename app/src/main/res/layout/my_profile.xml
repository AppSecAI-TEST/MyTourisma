<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mWhite"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_my_profile1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_of_profile_top_view">

                        <ImageView
                            android:id="@+id/imgBG"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_profile_bg" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imgBG"
                            android:layout_alignEnd="@+id/imgBG"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_profile_rest" />

                        <ImageView
                            android:id="@+id/imgSun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/m20dp"
                            android:layout_marginTop="@dimen/m20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_sun" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgSun"
                            android:layout_marginLeft="@dimen/m20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_profile_app_name" />

                        <com.ftl.tourisma.utils.CircleImageView
                            android:id="@+id/cv_my_profile"
                            android:layout_width="@dimen/profile_height"
                            android:layout_height="@dimen/profile_height"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center|bottom"
                            android:src="@drawable/profile_pic" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/m300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="John Smith"
                        android:textColor="@color/mBlue"
                        android:textSize="@dimen/TEXT_MEDIUM" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/m300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_profile_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Delhi, India"
                        android:textSize="@dimen/TEXT_EXTRA_SMALL" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m50dp"
                    android:gravity="center|left|top"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m30dp"
                        android:layout_marginRight="@dimen/m15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/email_profile" />

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_profile_email_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="johnsmith@gmail.com"
                        android:textSize="@dimen/m13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/m300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m30dp"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/txt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|start"
                        android:text="@string/email_hint"
                        android:textColor="@color/mBlack"
                        android:textSize="@dimen/TEXT_SMALL" />


                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|start"
                        android:textSize="@dimen/TEXT_SMALL" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m1dp"
                        android:background="@color/mGray" />
                    <!--<ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:paddingLeft="@dimen/m5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_signup" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/m300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m10dp"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/floatableAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|start"
                        android:text="@string/address_hint"
                        android:textColor="@color/mBlack"
                        android:textSize="@dimen/TEXT_SMALL" />


                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|start"
                        android:hint="@string/address_hint"
                        android:maxLines="5"
                        android:textSize="@dimen/TEXT_SMALL" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m1dp"
                        android:background="@color/mGray" />
                    <!--<ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:paddingLeft="@dimen/m5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_signup" />-->
                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/m300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/m10dp"
                    android:layout_marginTop="@dimen/m10dp"
                    android:gravity="center|left|top"
                    android:orientation="vertical">

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|start"
                        android:text="Language"
                        android:textColor="@color/mBlack"
                        android:textSize="@dimen/TEXT_SMALL" />


                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_profile_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|start"
                        android:textSize="@dimen/TEXT_SMALL" />

                    <!--  <View
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/m1dp"
                          android:background="@color/mGray" />-->
                </LinearLayout>
            </LinearLayout>


            <com.ftl.tourisma.custom_views.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m3dp"
                android:layout_marginTop="@dimen/m10dp"
                android:background="#E7E7E7" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_about_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m20dp"
                        android:src="@drawable/ic_about_us" />


                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m5dp"
                        android:text="@string/about_us"
                        android:textAllCaps="false"
                        android:textColor="@color/mBlack1"
                        android:textSize="@dimen/TEXT_SMALL" />


                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:id="@+id/tv_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/m30dp"
                        android:drawableLeft="@drawable/ic_logout"
                        android:drawablePadding="@dimen/m10dp"
                        android:text="@string/logout"
                        android:textColor="@color/mBlack1"
                        android:textSize="@dimen/TEXT_SMALL" />

                </LinearLayout>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fb_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/m20dp"
                    android:background="#00000000"
                    android:src="@drawable/edit_icon"
                    fab:fab_colorNormal="#00000000"
                    fab:fab_colorPressed="#00000000"
                    fab:fab_colorRipple="#00000000" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/sv_my_profile2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_of_profile_top_view">

                    <ImageView
                        android:id="@+id/imgBG1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_profile_bg" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgBG1"
                        android:layout_alignEnd="@+id/imgBG1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_profile_rest" />

                    <ImageView
                        android:id="@+id/imgSun1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m20dp"
                        android:layout_marginTop="@dimen/m20dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_sun" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgSun1"
                        android:layout_marginLeft="@dimen/m20dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_profile_app_name" />

                    <com.ftl.tourisma.utils.CircleImageView
                        android:id="@+id/cv_my_profile1"
                        android:layout_width="@dimen/profile_height"
                        android:layout_height="@dimen/profile_height"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/profile_pic" />
                </RelativeLayout>


                <com.ftl.tourisma.custom_views.NormalTextView
                    android:id="@+id/tv_profile_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/m20dp"
                    android:layout_marginRight="@dimen/m20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="Change Picture"
                    android:textSize="@dimen/m10dp" />


                <com.ftl.tourisma.custom_views.NormalTextView
                    android:id="@+id/tv_profile_email1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/m20dp"
                    android:layout_marginRight="@dimen/m20dp"
                    android:layout_marginTop="@dimen/m5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/mBlue"
                    android:textSize="@dimen/TEXT_SMALL" />


                <LinearLayout
                    android:layout_width="@dimen/m300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/m30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:id="@+id/fledt_profile_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        float:fletPadding="@dimen/m5dp">

                        <com.ftl.tourisma.custom_views.NormalEditText
                            android:id="@+id/edt_profile_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:gravity="left|start"
                            android:hint="@string/name_hint"
                            android:inputType="textPersonName"
                            android:maxLength="40"
                            android:paddingLeft="@dimen/m5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/TEXT_SMALL" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m1dp"
                        android:layout_marginLeft="@dimen/m4dp"
                        android:background="@color/mGray" />
                    <!--<ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:paddingLeft="@dimen/m5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_signup" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/m300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:id="@+id/fledt_address1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        float:fletPadding="@dimen/m5dp">

                        <com.ftl.tourisma.custom_views.NormalEditText
                            android:id="@+id/edt_address1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="left|start"
                            android:hint="@string/address_hint"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="3"
                            android:paddingLeft="@dimen/m5dp"
                            android:textSize="@dimen/TEXT_SMALL" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    <com.ftl.tourisma.custom_views.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m1dp"
                        android:layout_marginLeft="@dimen/m4dp"
                        android:background="@color/mGray" />

                    <LinearLayout
                        android:layout_width="@dimen/m300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/m10dp"
                        android:layout_marginTop="@dimen/m10dp"
                        android:orientation="vertical">

                        <com.ftl.tourisma.custom_views.NormalTextView
                            android:id="@+id/tv_language1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/m5dp"
                            android:gravity="left|start"
                            android:textColor="@color/mGray"
                            android:textSize="@dimen/TEXT_SMALL" />

                        <Spinner
                            android:id="@+id/tv_profile_language1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/m25dp"
                            android:background="@null"
                            android:gravity="left|start"
                            android:text=""
                            android:textColor="@color/mBlack"
                            android:textSize="@dimen/TEXT_EXTRA_SMALL" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:ripple="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            ripple:rv_type="rectangle">

                            <com.ftl.tourisma.custom_views.NormalTextView
                                android:id="@+id/button_save_changes"
                                style="@style/MyCustomButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="@dimen/m10dp"
                                android:paddingRight="@dimen/m10dp"
                                android:text="SAVE CHANGES" />
                        </com.andexert.library.RippleView>

                    </LinearLayout>
                </LinearLayout>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fb_edit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/m20dp"
                    android:background="#00000000"
                    android:src="@drawable/edit_icon"
                    fab:fab_colorNormal="#00000000"
                    fab:fab_colorPressed="#00000000"
                    fab:fab_colorRipple="#00000000" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/ll_about_us"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/header_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom"
            android:layout_below="@+id/title"
            android:gravity="center"
            android:orientation="vertical">

            <WebView
                android:id="@+id/wb_about_us"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </WebView>

        </LinearLayout>

        <ImageView
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/m10dp"
            android:src="@drawable/_ic_lang_footer" />
    </RelativeLayout>
</LinearLayout>