<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_above="@+id/whoops_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/not_available" />

        <TextView
            android:id="@+id/whoops_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scnd_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Sorry!"
            android:textColor="#ababab"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/scnd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="@string/country_change"
            android:textColor="#ababab"
            android:textSize="12sp" />

        <Button
            android:id="@+id/change_loc_btn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@+id/scnd_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:background="@drawable/rounded_btn"
            android:text="CHANGE LOCATION"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/suggest_loc_btn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@+id/change_loc_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_btn"
            android:text="SUGGEST LOCATION"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>