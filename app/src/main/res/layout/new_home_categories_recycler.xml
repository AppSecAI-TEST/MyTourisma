<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/new_rect_home_bg">

    <RelativeLayout
        android:id="@+id/rlBottomView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/opacityFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@android:color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/category_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <com.ftl.tourisma.custom_views.NormalTextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/place_count_txt"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/m10dp"
            android:text="Out Door"
            android:textColor="@color/mWhite"
            android:textSize="@dimen/TEXT_NORMAL"
            android:textStyle="bold" />

        <com.ftl.tourisma.custom_views.NormalTextView
            android:id="@+id/place_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/m10dp"
            android:layout_marginLeft="@dimen/m10dp"
            android:text="30 places"
            android:textColor="@color/mWhite"
            android:textSize="@dimen/TEXT_EXTRA_SMALL" />

    </RelativeLayout>

</RelativeLayout>