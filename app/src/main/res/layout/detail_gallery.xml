<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="@dimen/m150dp"
        android:layout_height="@dimen/m150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/transparentlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m50dp"
            android:layout_alignParentBottom="true"
            android:background="#99000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="@dimen/m0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:orientation="vertical"
                android:padding="@dimen/m5dp">

                <com.ftl.tourisma.custom_views.NormalTextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m5dp"
                    android:ellipsize="marquee"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Hello"
                    android:textColor="@color/mWhite"
                    android:textSize="@dimen/TEXT_SMALL_SKIP" />

                <com.ftl.tourisma.custom_views.NormalTextView
                    android:id="@+id/tv_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m5dp"
                    android:ellipsize="marquee"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Hello"
                    android:textColor="@color/mGray"
                    android:textSize="@dimen/TEXT_SMALL_SKIP" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/m0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llView"
                    android:layout_width="@dimen/m25dp"
                    android:layout_height="@dimen/m25dp"
                    android:layout_margin="@dimen/m10dp"
                    android:background="@drawable/bg_white_arrow"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_right_white_arrow" />
                </LinearLayout>
               <!-- <ImageView
                    android:layout_width="@dimen/m25dp"
                    android:layout_height="@dimen/m25dp"
                    android:background="@drawable/bg_white_arrow"
                    android:layout_margin="@dimen/m10dp"
                    android:padding="@dimen/m5dp"
                    android:src="@drawable/ic_right_white_arrow" />-->
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/mWhite" />
    </RelativeLayout>

</LinearLayout>