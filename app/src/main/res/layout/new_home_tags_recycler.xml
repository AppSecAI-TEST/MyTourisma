<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_tags"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tags_ht">

            <ImageView
                android:id="@+id/tags_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/opacityFilter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tags_ht"
                android:layout_alignTop="@+id/tags_img"
                android:background="#40000000" />

            <com.ftl.tourisma.custom_views.NormalTextView
                android:id="@+id/tag_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Out Door"
                android:textColor="@color/mWhite"
                android:textSize="@dimen/TEXT_NORMAL"
                android:textStyle="bold" />

            <com.ftl.tourisma.custom_views.NormalTextView
                android:id="@+id/place_count_txt_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tag_name_txt"
                android:layout_centerHorizontal="true"
                android:text="30 places"
                android:textColor="@color/mWhite"
                android:textSize="@dimen/TEXT_EXTRA_SMALL"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>