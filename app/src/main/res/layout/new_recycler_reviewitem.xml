<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/mainly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.ftl.tourisma.utils.CircleImageView
            android:id="@+id/cv_my_profile"
            android:layout_width="@dimen/review_item60"
            android:layout_height="@dimen/review_item60"
            android:layout_marginLeft="@dimen/review_item5"
            android:layout_marginTop="@dimen/review_item10"
            android:src="@drawable/profile_pic" />

        <com.ftl.tourisma.custom_views.NormalTextView
            android:id="@+id/textnameid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/review_item5"
            android:layout_marginTop="@dimen/review_item25"
            android:layout_toRightOf="@+id/cv_my_profile"
            android:text="Srilakshmi kunel pande"
            android:textColor="@color/mBlack"
            android:textSize="@dimen/TEXT_SMALL" />

        <com.ftl.tourisma.custom_views.NormalTextView
            android:id="@+id/dateid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textnameid"
            android:layout_marginLeft="@dimen/review_item5"
            android:layout_marginTop="@dimen/review_item5"
            android:layout_toRightOf="@+id/cv_my_profile"
            android:text="12 Jul 2017"
            android:textColor="@color/mBlack"
            android:textSize="@dimen/TEXT_SMALL" />

        <com.ftl.tourisma.custom_views.NormalTextView
            android:id="@+id/placeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateid"
            android:layout_marginLeft="@dimen/review_item40"
            android:layout_marginTop="@dimen/review_item10"
            android:text="Good place for outing"
            android:textColor="@color/mBlack"
            android:textSize="@dimen/TEXT_SMALL" />

        <RelativeLayout
            android:id="@+id/textaliment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeid">

            <com.ftl.tourisma.custom_views.NormalTextView
                android:id="@+id/placediscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/review_item40"
                android:layout_marginRight="@dimen/review_item20"
                android:layout_marginTop="@dimen/review_item5"
                android:text="@string/placedecription"
                android:textColor="@color/mBlack"
                android:textSize="@dimen/TEXT_SMALL" />

            <com.ftl.tourisma.custom_views.NormalTextView
                android:id="@+id/changedescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placediscription"
                android:layout_marginLeft="@dimen/review_item60"
                android:layout_marginRight="@dimen/review_item20"
                android:layout_marginTop="@dimen/review_item10"
                android:text="@string/placedecription"
                android:textColor="@color/mBlack"
                android:textSize="@dimen/TEXT_SMALL"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/review_item10"
            android:layout_marginTop="@dimen/review_item25"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/review_item40"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/review_item3"
                    android:background="@drawable/starunselected"

                    />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/review_item3"
                    android:background="@drawable/starunselected" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/review_item3"
                    android:background="@drawable/starunselected" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/review_item3"
                    android:background="@drawable/starunselected" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/review_item3"
                    android:background="@drawable/starunselected" />
            </LinearLayout>

            <com.ftl.tourisma.custom_views.NormalTextView
                android:id="@+id/goodid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/review_item50"
                android:layout_marginTop="@dimen/review_item5"
                android:text="Very Good"
                android:textColor="@color/mBlack"
                android:textSize="@dimen/TEXT_SMALL" />
        </LinearLayout>


        <com.ftl.tourisma.custom_views.NormalTextView
            android:id="@+id/translateid"
            android:layout_width="@dimen/trans100"
            android:layout_height="@dimen/review_item40"
            android:layout_below="@+id/textaliment"
            android:layout_marginLeft="@dimen/review_item40"
            android:layout_marginTop="@dimen/review_item20"
            android:background="@drawable/new_rectangluer"
            android:gravity="center"
            android:text="Translate"
            android:textColor="@color/mBlack"
            android:textSize="@dimen/TEXT_MEDIUM" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/translateid"
            android:layout_marginTop="@dimen/review_item10"
            android:background="#C8C8C8">

        </View>
    </RelativeLayout>


</RelativeLayout>