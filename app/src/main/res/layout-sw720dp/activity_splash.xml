<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mWhite"
    android:animateLayoutChanges="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgSplash1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/ic_splash1" />

    <ImageView
        android:id="@+id/imgSplash2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/ic_splash2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCloud"
            android:layout_width="800dp"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud" />
    </ScrollView>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_splash_logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/m10dp"
        android:src="@drawable/_ic_lang_footer" />
</RelativeLayout>