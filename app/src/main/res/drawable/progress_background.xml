<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">
        <!--        <size
                    android:height="@dimen/progressDailog"
                    android:width="@dimen/progressDailog" />-->

        <gradient
            android:angle="0"
            android:centerColor="@color/highlighted_text_material_light"
            android:centerY="0.50"
            android:endColor="#b8bdbf"
            android:startColor="#06bef1"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>
